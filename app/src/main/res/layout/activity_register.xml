<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:background="@color/bg"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

       <ImageView
           android:layout_width="250dp"
           android:src="@drawable/logo"
           android:layout_height="250dp"
           android:layout_gravity="center"
           >

       </ImageView>

        <TextView android:id="@+id/loginscrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PavperNaav"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_gravity="center"/>
        <TextView android:id="@+id/fstTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="just a little bit of paperwork."
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>
        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>

        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Mobile Number"
            android:inputType="number"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>
        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>
        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Conform Password"
            android:inputType="textPassword"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="20dp"
            android:text="Select Gender"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"

            >

            <RadioButton
                android:textColor="#fff"
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20dp"
                android:layout_marginLeft="46dp"
                />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignLeft="@+id/radioGroup1"
                android:layout_below="@+id/radioGroup1"
                android:text="Female"
                android:textColor="#fff"
                android:textSize="20dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignLeft="@+id/radioGroup1"
                android:layout_below="@+id/radioGroup1"
                android:text="Other"
                android:textColor="#fff"
                android:textSize="20dp"
                />

        </RadioGroup>




        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="20dp"
            android:text="Date of Birth"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="20dp"
            android:text="Address"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="House No/Building"
            android:inputType="text"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>

        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Street Address"
            android:inputType="text"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>

        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="City/State"
            android:inputType="text"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >


        </EditText>

        <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Pincode"
            android:inputType="number"
            android:textColor="#111"
            android:textColorHint="#997E7979"
            android:textSize="25dp"
            >

        </EditText>
        <Button android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:onClick="done"
            android:text="Register!"
            android:textSize="20dp"
            android:background="@drawable/buttonbg"
            />
    </LinearLayout>
</ScrollView>